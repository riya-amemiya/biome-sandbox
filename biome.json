{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [
			"module",
			"node_modules",
			".codesandbox"
		],
		"indentStyle": "space",
		"lineWidth": 80
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"module",
			"node_modules",
			".codesandbox"
		],
		"rules": {
			"recommended": true
		}
	}
}